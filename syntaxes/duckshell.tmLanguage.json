{
	"name": "Duck Shell",
	"scopeName": "source.dsh",
	"patterns": [
		{
			"include": "#comment"
		},
		{
			"include": "#operator"
		},
		{
			"include": "#bkeyword"
		},
		{
			"include": "#number"
		},
		{
			"captures": {
				"1": {
					"name": "support.function"
				},
				"2": {
					"name": "variable"
				}
			},
			"match": "\\s*([^ \\n\\r{}]+)(\\s+[^{},;:\\?]+)*\\s*"
		}
	],
	"repository": { 
		"operator": {
			"match": "(?:;|,|\\?|:|:\\?)",
			"name": "operator"
		},
		"keyword": {
			"match": "\\b(?:true|false|null)\\b",
			"name": "keyword"
		},
		"number": {
			"match": "-?(?:0|[1-9]\\d*)(?:(?:\\.\\d+)?)?",
			"name": "constant.numeric"
		},
		"comment":{
			"match": "#.*(#|$)",
			"name" : "comment"
		}
	}
}